rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document and subcollections
    match /users/{userId} {
      // Allow read/write access to the user document itself
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Lists subcollection - users can only access their own lists
      match /lists/{listId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // Items subcollection - users can only access their own items
      match /items/{itemId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Deny access to all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
